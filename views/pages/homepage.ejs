<link rel="stylesheet" href="/styles/app.css">

<script type="text/javascript">
  setTimeout(function sunrise() {
    document.getElementsByClassName('header')[0].style.backgroundColor = '#118798';
  }, 0);
</script>

<div class="default-page">
  <div class="header">
    <h1 id="main-title" class="container">Student ERP portal.</h1>
    <h3 class="container">You're looking at:
      <code>Student Directory</code>
    </h3>
  </div>
  <div class="container">
    <br>
    <h2>All Registered Students</h2>
    <br>
    <p>CRUD Operations</p>
    <br>
    <br>
    <table class="table table-hover">
      <thead>

        <tr>
          <th>ID </th>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
        <% students.forEach(function (student){ %>
          <tr>
            <td>
              <%= student.id %>
            </td>
            <td>
              <%= student.name %>
            </td>


          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
</div>