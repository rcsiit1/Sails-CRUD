<link rel="stylesheet" href="/styles/app.css">
      
      
      <div class="default-page">
        <div class="header">
          <h1 id="main-title" class="container">Student ERP portal.</h1>
          <h3 class="container">You're looking at: <code>Updating to the Database</code></h3>
        </div>
        <div class="container">
          <br>
          <h2>Update Student Data</h2><br>        
          <form action="/students/update/<%= students.id %>" method="post">
                <div class="form-group">
                  <input type="hidden" class="form-control"  value="<%= students.id %>" />
                  <label >Full Name</label>
                  <input type="text" class="form-control"  value="<%= students.name %>"name="fullname" placeholder="Enter full name"/>
                 
                </div>
                
                <button type="submit" class="btn btn-primary">Add</button>
              </form>
        </div>
      </div>
      
      
      
      <script type="text/javascript">
        setTimeout(function sunrise () {
          document.getElementsByClassName('header')[0].style.backgroundColor = '#118798';
        }, 0);
        </script>